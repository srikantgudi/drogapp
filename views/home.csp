<%layout base%>
<%c++
  #include "Category.h"

  auto & categories = @@.get<std::vector<Category>>("categories");
%>

<h2>[[ title ]]</h2>

<div>
  Categories# <%c++ $$<<categories.size(); %>
</div>

<%c++ for (const auto &row : categories) { %>
  <div>
    <%c++ $$<<row.id; %> 
    <%c++ $$<<row.name; %>
  </div>
<%c++ } %>

<div>
  [[ data ]]
</div>